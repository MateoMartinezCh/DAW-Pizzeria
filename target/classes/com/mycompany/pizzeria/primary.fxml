                        <Image url="@../../../icononuevousuario.png" />
                     </image>
                  </ImageView>
               </items>
            </ToolBar>
            <ToolBar maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="54.0" prefWidth="59.0" style="-fx-border-color: black; -fx-border-width: 3; -fx-background-color: white;">
               <items>
                  <ImageView fx:id="imagen_botonpedidos" fitHeight="43.0" fitWidth="41.0" onMouseClicked="#cambiar2" pickOnBounds="true" preserveRatio="true">
