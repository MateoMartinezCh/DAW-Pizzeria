<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.pizzeria.NuevoProducto">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox>
         <children>
            <Label text="Nombre" />
            <TextField fx:id="nombre" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Button fx:id="enviar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#añadirnuevo" text="Añadir">
               <HBox.margin>
                  <Insets left="1.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="botoncancelar" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onMouseClicked="#cancelar" text="Cancelar">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
